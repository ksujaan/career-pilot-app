rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to create their own user document
      allow create: if isOwner(userId);
      
      // A user can only access their own documents
      allow get, list, update, delete: if isOwner(userId);

      // Rules for the 'profile' subcollection
      match /profile/{docId} {
        // A user can read, write, and update their own profile
        allow get, list, create, update, delete: if isOwner(userId);
      }

      // Rules for the 'applications' subcollection
      match /applications/{applicationId} {
        // A user can manage their own job applications
        allow get, list, create, update, delete: if isOwner(userId);
      }
    }
  }
}
